<%- include ('../partials/header') %>

<div class="container">
    <h1 class="mb-4">Create a new Campground</h1>
    <form action="/campgrounds" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Campground Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="enter camp name">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Campground Image</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="enter image url">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Campground Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="enter camp description">
        </div>
        <button type="submit" class="btn btn-primary">create campground</button>
    </form>
    <a href="/campgrounds" class="btn btn-secondary mt-3 mb-3">Go Back</a>
</div>

<%- include ('../partials/footer') %>