<%- include ('../partials/header') %>

<div class="container mt-4">
    <header class="bg-light p-5 rounded">
        <h1 class="display-3 text-dark">Welcome To CampDavid</h1>
        <p class="text-dark">View my hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add campground</a></p>
    </header>
    <br>
    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card mb-4">
                    <div class="card-img-container">
                        <img src="<%= campground.image %>" class="card-img-top img-fluid" alt="<%= campground.name %>">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                    </div>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">view more</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') %>